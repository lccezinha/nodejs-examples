<% include ../header %>
<header>
  <h2>Ntalk - Dados do contato</h2>
</header>
<section>
  <form action="/contacts/<%- id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <p><label>Nome:</label><%- contact.name %></p>
    <p><label>E-mail:</label><%- contact.email %></p>
    <p>
      <button type="submit">Excluir</button>
      <a href="/contacts/<%- id %>/edit">Editar</a>
    </p>
  </form>
</section>
<% include ../exit %>
<% include ../footer %>